<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup Label="Project">
    <TargetFramework>net6.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyTitle>V4l2.AutoGen</AssemblyTitle>
    <AssemblyName>V4l2.AutoGen</AssemblyName>
  </PropertyGroup>

  <PropertyGroup Label="Nuget">
    <PackageId>V4l2.AutoGen</PackageId>
    <Version>1.0.0</Version>
    <Authors>Speykious</Authors>
    <PackageTags>v4l2;video4linux2;camera;webcam;linux</PackageTags>
    <Title>V4l2.AutoGen</Title>
    <Description>Auto-generated .NET bindings for V4l2</Description>
    <Copyright>2022 Speykious</Copyright>
    <PackageProjectUrl>https://github.com/Speykious/V4l2.AutoGen</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup Label="Package References">
    <PackageReference Include="CppSharp.Runtime" Version="1.0.3" />
  </ItemGroup>

  <ItemGroup Label="Documents">
    <None Include="..\LICENSE" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
